<?php

/**
 * @file
 * Contains install and update functions of OpenEuropa Webtools Analytics Rules.
 */

declare(strict_types = 1);

use Drupal\Core\Cache\Cache;

/**
 * Implements hook_install().
 */
function oe_webtools_analytics_rules_install() {
  // Because the OpenEuropa Webtools Analytics Rules module contains
  // event subscriber which use cache context 'url.path', we must invalidate
  // all cached HTML output.
  Cache::invalidateTags(['rendered']);
  \Drupal::service('twig')->invalidate();
}
